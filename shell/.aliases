# この.aliasはbashとzshで共通
# ostype declared at .zshrc
# macの場合:ostype="mac"
# wslの場合:ostype='wsl'
#それ以外:ostype="linux"



# OCamlのエイリアスを設定
# OCamlでカーソル移動ができるようにrlwrap経由で起動する
alias ocaml='rlwrap ocaml'

# docker-compose用のエイリアスを設定
alias fig='docker-compose'

# VScode-insidersをcodeで起動できるように設定
alias code='code-insiders'


# shellがbashだった場合
if [ -n "$BASH_VERSION" ]; then
    # open ~/.bashrc in using the default editor specified in $EDITOR
    alias bashconfig="$EDITOR $HOME/.bashrc"

    # source ~/.bashshrc
    alias bashreload="source $HOME/.bashrc"
fi


# shellがzshだった場合
if [ -n "$ZSH_VERSION" ]; then
    # open ~/.zshrc in using the default editor specified in $EDITOR
    alias zshconfig="$EDITOR $HOME/.zshrc"

    # source ~/.zshrc
    alias zshreload="source $HOME/.zshrc"
fi 


# aliases for git
# https://opensource.com/article/20/11/git-aliases
git config --global alias.aa 'add .'
git config --global alias.p 'push'

# windowsでwslの時にelでexplorerを起動したい
# macだったらfinderで表示したいのでopenにすればいいか
# linuxの場合もopenで起動できる
# if [ "$(uname)" = 'Darwin' ]; then #OSがmacのとき
if [[ $ostype = "mac" ]]; then #OSがmacのとき
    alias el='open'
elif [[ $ostype = "wsl" ]]; then # wslの時
    alias el='explorer.exe'
elif [[ $ostype = "linux" ]]; then # linuxの時
    alias el='open'
fi


# batが入っていたらcatの代わりにbatをつかう
if [[ $ostype = "mac" ]]; then #OSがmacのとき
    if [[ -e /opt/homebrew/bin/bat ]]; then
        alias cat='bat'
    fi
elif [[ $ostype == "wsl" ]]; then
    if [[ -e /usr/sbin/bat ]]; then 
        alias cat='bat'
    fi
elif [[ $ostype == "linux" ]]; then
    if [[ -e /usr/sbin/bat ]]; then 
        alias cat='bat'
    fi
fi


