# lsd(ls Deluxe)が入っていたらllをlsd -alFにする
# 入っていなかったらllでls -alfG --color=autoにする
# lsでlsdにする
if [[ $ostype == "mac" ]]; then # macのとき
    if [[ -e /opt/homebrew/bin/lsd ]]; then
        alias ls=lsd
        alias ll='lsd -alF'
    else 
        alias ll='ls -alFG --color=auto'
    fi
elif [[ $ostype == "wsl" ]]; then # wslのとき
    if [[ -e /usr/sbin/lsd ]]; then
        alias ls=lsd
        alias ll='lsd -alF'
    else
        alias ll='ls -alFG --color=auto'
    fi
fi

